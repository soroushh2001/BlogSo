@using SoBlog.Domain.DTOs.Common
@model PagingViewModel
<ul class="pagination pagination-sm pagination-bordered mb-0">

  
    @if (Model.CurrentPage > 1)
    {
        <li class="page-item">
            <a class="page-link" onclick="SubmitFilterFormPagination('@(Model.CurrentPage - 1)')" tabindex="-1" aria-disabled="true">قبل</a>
        </li>
    }

    @for (var i = Model.StartPage; i <= Model.EndPage; i++)
    {
        if (i == Model.CurrentPage)
        {
            <li class="page-item"><a class="page-link active" href="javascript:void(0)">@i</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" onclick="SubmitFilterFormPagination('@i')">@i</a></li>
        }
    }
   
    @if (Model.CurrentPage < Model.EndPage)
    {

        <li class="page-item">
            <a class="page-link" onclick="SubmitFilterFormPagination('@(Model.CurrentPage + 1)')">بعد</a>
        </li>
    }

</ul>